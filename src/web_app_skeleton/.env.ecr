# This file is for local development environment variables
# Copy this file to .env and update with your local settings

# Database configuration
# Option 1: Use a full DATABASE_URL
# DATABASE_URL=postgres://username:password@localhost:5432/<%= crystal_project_name %>_development

# Option 2: Use individual components
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=postgres

# Application settings
# LUCKY_ENV=development

# For production, always use environment variables for secrets:
# SECRET_KEY_BASE=your_production_secret_key
# DATABASE_URL=your_production_database_url